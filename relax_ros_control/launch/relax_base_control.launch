<?xml version="1.0"?>
<launch>
    
    <arg name="prefix" default=""/>
    
    <!-- Load ros_control controller configurations -->
    <rosparam file="$(find relax_ros_control)/config/base_joint_state_controller.yaml" command="load" />
    <rosparam file="$(find relax_ros_control)/config/diffdrive_controller.yaml" command="load" subst_value="true" />

    <!-- Start the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen"
        args="base_joint_state_controller mobile_base_controller"/>

</launch>


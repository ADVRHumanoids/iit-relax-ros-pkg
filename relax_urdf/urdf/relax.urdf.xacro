<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="relax">

<!-- ************ MODEL CONFIGURATION ************ -->
<xacro:include filename="$(find relax_urdf)/urdf/relax_config.urdf.xacro" />
  
<!-- ************ RELAX BASE ************ -->
<xacro:include filename="$(find relax_urdf)/urdf/relax_base.urdf.xacro"/>

<!-- **** attach to the world **** -->
<xacro:if value="${ADD_FLOATING_BASE}">
    <link name="world"/>
    <joint name="world_joint" type="floating">
      <parent link="world"/>
      <child link=""/>
    </joint>
</xacro:if>
<xacro:unless value="${ADD_FLOATING_BASE}">
    <link name="world"/>
    <joint name="world_joint" type="fixed">
      <parent link="world"/>
      <child link=""/>
    </joint>
</xacro:unless>
  
</robot>

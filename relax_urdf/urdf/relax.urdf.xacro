<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="relax">

<!-- ************ MODEL CONFIGURATION ************ -->
<xacro:include filename="$(find relax_urdf)/urdf/config/relax.urdf.xacro" />
	
<!-- ************ UTILS ************ -->
<xacro:include filename="$(find relax_urdf)/urdf/relax_utils.urdf.xacro"/>
	
<!-- ************ RELAX BASE ************ -->
<xacro:include filename="$(find relax_urdf)/urdf/relax_base.urdf.xacro"/>

<!-- ***** attach base to the world ***** -->
<xacro:if value="${RELAX_FLOATING_BASE}" > <!-- floating base -->
	<link name="world"/>
  	<joint name="world_joint" type="floating">
    	<parent link="world"/>
    	<child link="base_link"/>
		<origin xyz="0 0 0" rpy="0 0 0" />
	</joint>
</xacro:if>
<xacro:if value="${RELAX_FIXED_BASE}" > <!-- fixed base -->
  	<link name="world"/>
   	<joint name="world_joint" type="fixed">
    		<parent link="world"/>
    		<child link="base_link"/>
  	</joint>
    <origin xyz="0 0 0" rpy="0 0 0" />
</xacro:if>
  
</robot>
